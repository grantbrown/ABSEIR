EXT_PKGDR=`$(R_HOME)/bin/Rscript -e "RcppCAF:::LdFlags()"`
CXX_STD=CXX11
PKG_CPPFLAGS= -Wall -pedantic -pthread -fPIC -O2 -g -I./include -I./libcaf_core -I./libcaf_io
PKG_LIBS=  -lm -L$(EXT_PKGDR) -lcaf_main
LIBS+=-L$(EXT_PKGDR)

SOURCES = $(wildcard ./*.cpp)
OBJECTS = $(SOURCES:.cpp=.o)

$(SHLIB): $(OBJECTS)


